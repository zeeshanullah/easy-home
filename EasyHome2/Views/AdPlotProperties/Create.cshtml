                                        @Html.ValidationMessageFor(model => model.AdPlotProperty.PropertyLandArea, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>
                                        @Html.LabelFor(model => model.AdPlotProperty.PropertyLandAreaUnit, htmlAttributes: new { @class = "control-label" })
                                    </label>
                                    @Html.EditorFor(model => model.AdPlotProperty.PropertyLandAreaUnit, new { htmlAttributes = new { @class = "form-control" } })
                                    <div class="col-md-10">
                                        @Html.ValidationMessageFor(model => model.AdPlotProperty.PropertyLandAreaUnit, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>
                                        @Html.LabelFor(model => model.AdPlotProperty.PropertyPrice, htmlAttributes: new { @class = "control-label" })
                                    </label>
                                    @Html.EditorFor(model => model.AdPlotProperty.PropertyPrice, new { htmlAttributes = new { @class = "form-control" } })
                                    <div class="col-md-10">
                                        @Html.ValidationMessageFor(model => model.AdPlotProperty.PropertyPrice, "", new { @class = "text-danger" })
                                    </div>
                                </div>



                                <div class="form-group">
                                    <label>
                                        @Html.LabelFor(model => model.AdPlotProperty.PropertyDescription, htmlAttributes: new { @class = "control-label" })
                                    </label>
                                    @Html.EditorFor(model => model.AdPlotProperty.PropertyDescription, new { htmlAttributes = new { @class = "form-control" } })
                                    <div class="col-md-10">
                                        @Html.ValidationMessageFor(model => model.AdPlotProperty.PropertyDescription, "", new { @class = "text-danger" })
                                    </div>
                                </div>



                                <div class="form-group">
                                    <label>
                                        @Html.LabelFor(model => model.AdPlotProperty.ExpiresAfter, htmlAttributes: new { @class = "control-label" })
                                    </label>
                                    @Html.EditorFor(model => model.AdPlotProperty.ExpiresAfter, new { htmlAttributes = new { @class = "form-control" } })
                                    <div class="col-md-10">
                                        @Html.ValidationMessageFor(model => model.AdPlotProperty.ExpiresAfter, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10" style="margin:-15px;margin-top:5px;margin-bottom:5px">
                                        <input type="submit" value="Create" class="btn btn-raised btn-block btn-success" />
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
            <!-- Form Ended -->

    }


</body>