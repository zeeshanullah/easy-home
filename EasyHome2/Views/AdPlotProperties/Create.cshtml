                                    <div class="col-md-10">
                                        @Html.ValidationMessageFor(model => model.AdPlotProperty.City, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>
                                        @Html.LabelFor(model => model.AdPlotProperty.Location, htmlAttributes: new { @class = "control-label" })
                                    </label>
                                    @Html.EditorFor(model => model.AdPlotProperty.Location, new { htmlAttributes = new { @class = "form-control" } })
                                    <div class="col-md-10">
                                        @Html.ValidationMessageFor(model => model.AdPlotProperty.Location, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>
                                        @Html.LabelFor(model => model.AdPlotProperty.Address, htmlAttributes: new { @class = "control-label" })
                                    </label>
                                    @Html.EditorFor(model => model.AdPlotProperty.Address, new { htmlAttributes = new { @class = "form-control" } })
