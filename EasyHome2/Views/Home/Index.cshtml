@Html.Partial("_NavBar")
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>

    <div style="width:100% !important">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Content/img/banner-slider-1.jpg" alt="Los Angeles" style="width:100%;">
                    <div class="container">
                        <div class="carousel-caption banner-slider-inner banner-top-align">
                            <div>
                                <h1 data-animation="animated fadeInDown delay-05s"><span>Welcome to </span> Easy Home</h1>
                                <p data-animation="animated fadeInUp delay-05s">We are Here to help you to find your choice of property</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/img/banner-slider-2.jpg" alt="Chicago" style="width:100%;">
                    <div class="carousel-caption banner-slider-inner banner-top-align">
                        <div>
                            <h1 data-animation="animated fadeInDown delay-05s"><span>Find your </span> Dream House</h1>
                            <p data-animation="animated fadeInUp delay-05s">We are Here to help you to find your choice of property</p>
                        </div>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/img/banner-slider-3.jpg" alt="New york" style="width:100%;">
                    <div class="carousel-caption banner-slider-inner banner-top-align">
                        <div>
                            <h1 data-animation="animated fadeInDown delay-05s"><span>Find your </span> Dream House</h1>
                            <p data-animation="animated fadeInUp delay-05s">We are Here to help you to find your choice of property</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" style="margin-left:-60px" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" style="margin-right:-60px" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>



    <form id="searcForm">
        <div class="search-area hidden-xs">
            <div class="search-area-inner">
                <div class="search-contents show-search-area animated fadeInUp">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.SearchModel.PropertyStatus, new SelectList(Model.PropertyStatusSelectList(), "id", "PropertyStatus"), "Property Status", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.SearchModel.PropertyTypes, new SelectList(Model.PropertyTypesSelectList(), "id", "PropertyTypes"), "Property Type", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.SearchModel.Area, new SelectList(Model.AreaSelectList(), "id", "Area"), "Area", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.SearchModel.AreaUnit, new SelectList(Model.AreaUnitSelectList(), "id", "AreaUnit"), "Area Unit", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.SearchModel.MinPrice, new SelectList(Model.MinPriceSelectList(), "id", "MinPrice"), "Minimum Price", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.SearchModel.MaxPrice, new SelectList(Model.MaxPriceSelectList(), "id", "MaxPrice"), "Maximum Price", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.SearchModel.City, new SelectList(Model.CitySelectList(), "id", "City"), "City", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                            <div class="form-group">
                                <button id="SearchButton" class="btn btn-primary" , onclick='SearchClick(this,event);'>Search</button>
                                @*@Html.ActionLink("Search","Index", "Home", new {Id="SearchButton", @class="btn btn-primary", onclick = "SearchClick(this,event);" });*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>


    <section>
        <div class="container">
            <div class="row">
                <h2 style="margin-top:50px; text-align:center">Top Residential Properties</h2>

                @foreach (var item in Model.AdHomeProperty.Take(3))
                {
                    foreach (var atom in Model.HomeImages.Where(c => c.HomeId == item.Id & c.ImageNumber == 1))
                    {

                        <div class="col-lg-4" style="margin:20px 0px;">
                            <div class="properties thumbnail" style="margin:0px 10px">
                                <div class="image-holder zoomer"><img src="@Url.Content(atom.ImageUrl)" class="img-responsive" alt="properties" /></div>
                                <div class="col-lg-6">
                                    <h4><a style="color:#055b07;">@item.Location</a></h4>
                                </div>
                                <div class="col-lg-6" style="margin-top:10px; text-align:end">
                                    <h5 class="price">Price: @item.PropertyPrice</h5>
                                </div>
                                @Html.ActionLink("View Details", "Details", "AdHomeProperties", new { id = item.Id }, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    }
                }
            </div>


            <div class="row">
                <h2 style="margin-top:50px; text-align:center;">Top Commercial Properties</h2>

                @foreach (var item in Model.AdCommercialProperty.Take(3))
                {
                    foreach (var atom in Model.CommercialImages.Where(c => c.CommercialId == item.Id & c.ImageNumber == 1))
                    {

                        <div class="col-lg-4" style="margin:20px 0px;">
                            <div class="properties thumbnail" style="margin:0px 10px">
                                <div class="image-holder zoomer"><img src="@Url.Content(atom.ImageUrl)" class="img-responsive" alt="properties" /></div>
                                <div class="col-lg-6">
                                    <h4><a style="color:#055b07">@item.Location</a></h4>
                                </div>
                                <div class="col-lg-6" style="margin-top:10px; text-align:end">
                                    <h5 class="price">Price: @item.PropertyPrice</h5>
                                </div>
                                @Html.ActionLink("View Details", "Details", "AdCommecialProperties", new { id = item.Id }, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>

    <br /><br /><br />
</body>


@Html.Partial("_Footer")


</html>

